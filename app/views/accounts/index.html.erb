<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Account number</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Mobile</th>
      <th>Address</th>
      <th>Postcode</th>
      <th>Suburb</th>
      <th>Social media</th>
      <th>Business name</th>
      <th>Abn</th>
      <th>Phone</th>
      <th>Website</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
    <tr>
      <td><%= account.account_number %></td>
      <td><%= account.first_name %></td>
      <td><%= account.last_name %></td>
      <td><%= account.mobile %></td>
      <td><%= account.address %></td>
      <td><%= account.postcode %></td>
      <td><%= account.suburb %></td>
      <td><%= account.social_media %></td>
      <td><%= account.business_name %></td>
      <td><%= account.abn %></td>
      <td><%= account.phone %></td>
      <td><%= account.website %></td>
      <td><%= account.user.email %></td>
      <td><%= link_to 'Show', account %></td>
      <td><%= link_to 'Edit', edit_account_path(account) %></td>
      <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

