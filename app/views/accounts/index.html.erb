<p id="notice"><%= notice %></p>

<div class="list-group">

  <h1>Accounts</h1>
  <div class="accounts">
    <table>
      <thead>
        <tr>
          <th>Account number</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Mobile</th>
          <th>Address</th>
          <th>Postcode</th>
          <th>Suburb</th>
          <th>Social media</th>
          <th>Business name</th>
          <th>Abn</th>
          <th>Phone</th>
          <th>Website</th>
          <th>email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @accounts.each do |account| %>
        <tr>
          <td><%= account.account_number %></td>
          <td><%= account.first_name %></td>
          <td><%= account.last_name %></td>
          <td><%= account.mobile %></td>
          <td><%= account.address %></td>
          <td><%= account.postcode %></td>
          <td><%= account.suburb %></td>
          <td><%= account.social_media %></td>
          <td><%= account.business_name %></td>
          <td><%= account.abn %></td>
          <td><%= account.phone %></td>
          <td><%= account.website %></td>
          <td><%= account.user.email %></td>
          <td><%= link_to 'Show', account, class:"btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_account_path(account), class: "btn btn-success" %></td>
          <td><%= link_to 'Delete', account, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <h1>users</h1>
  <div class="accounts">
    <table>
      <thead>
        <tr>
          <th>username</th>
          <th>email</th>
          <th>role</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'Show', user.account, class:"btn btn-primary" %></td>
          <td><%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br>